{
  "name": "@kitiumai/detector",
  "version": "3.0.0",
  "description": "Universal platform and framework detection for JavaScript/TypeScript applications. Detect browsers, frameworks, platforms, and capabilities with zero dependencies.",
  "keywords": [
    "detector",
    "detection",
    "detect",
    "platform",
    "platform-detection",
    "browser-detection",
    "framework",
    "framework-detection",
    "browser",
    "user-agent",
    "useragent",
    "ua-parser",
    "device-detection",
    "runtime",
    "runtime-detection",
    "environment",
    "environment-detection",
    "react",
    "react-detection",
    "vue",
    "vue-detection",
    "angular",
    "angular-detection",
    "svelte",
    "svelte-detection",
    "solid",
    "solidjs",
    "nextjs",
    "next",
    "nuxt",
    "remix",
    "astro",
    "qwik",
    "web-components",
    "stencil",
    "lit",
    "polymer",
    "capabilities",
    "feature-detection",
    "browser-capabilities",
    "webgl",
    "webgl2",
    "canvas",
    "audio",
    "video",
    "geolocation",
    "notification",
    "service-worker",
    "web-worker",
    "indexeddb",
    "localstorage",
    "websocket",
    "universal",
    "isomorphic",
    "cross-platform",
    "ssr",
    "server-side-rendering",
    "csr",
    "client-side",
    "react-native",
    "electron",
    "capacitor",
    "cordova",
    "nwjs",
    "tauri",
    "mobile",
    "mobile-detection",
    "ios",
    "android",
    "windows",
    "macos",
    "linux",
    "nodejs",
    "node",
    "deno",
    "bun",
    "browser-support",
    "progressive-enhancement",
    "graceful-degradation",
    "typescript",
    "type-safe",
    "zero-dependencies",
    "lightweight",
    "tree-shakeable",
    "esm",
    "commonjs",
    "modular",
    "developer-tools",
    "devtools",
    "dx",
    "kitium",
    "kitiumai"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./platform": {
      "types": "./dist/detectors/platform.d.ts",
      "import": "./dist/detectors/platform.mjs",
      "require": "./dist/detectors/platform.js"
    },
    "./framework": {
      "types": "./dist/detectors/framework.d.ts",
      "import": "./dist/detectors/framework.mjs",
      "require": "./dist/detectors/framework.js"
    },
    "./capabilities": {
      "types": "./dist/detectors/capabilities.d.ts",
      "import": "./dist/detectors/capabilities.mjs",
      "require": "./dist/detectors/capabilities.js"
    },
    "./capabilities-async": {
      "types": "./dist/detectors/capabilities-async.d.ts",
      "import": "./dist/detectors/capabilities-async.mjs",
      "require": "./dist/detectors/capabilities-async.js"
    },
    "./utils/cache": {
      "types": "./dist/utils/cache.d.ts",
      "import": "./dist/utils/cache.mjs",
      "require": "./dist/utils/cache.js"
    },
    "./utils/testing": {
      "types": "./dist/utils/testing.d.ts",
      "import": "./dist/utils/testing.mjs",
      "require": "./dist/utils/testing.js"
    },
    "./utils/client-hints": {
      "types": "./dist/utils/client-hints.d.ts",
      "import": "./dist/utils/client-hints.mjs",
      "require": "./dist/utils/client-hints.js"
    },
    "./utils/device": {
      "types": "./dist/utils/device.d.ts",
      "import": "./dist/utils/device.mjs",
      "require": "./dist/utils/device.js"
    },
    "./utils/localization": {
      "types": "./dist/utils/localization.d.ts",
      "import": "./dist/utils/localization.mjs",
      "require": "./dist/utils/localization.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.mjs",
      "require": "./dist/types/index.js"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.mjs",
    "dist/**/*.d.ts",
    "dist/**/*.d.mts",
    "dist/**/*.map",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "type": "module",
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm run build && pnpm run test",
    "clean": "rimraf dist",
    "typecheck": "tsc -b --noEmit",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "changeset": "ensure-changeset && changeset",
    "version": "ensure-changeset && changeset version",
    "publish:set-token": "set-npm-token",
    "publish:setup": "set-npm-token",
    "publish:check": "npm whoami --registry https://registry.npmjs.org || npm login --registry https://registry.npmjs.org",
    "publish:login": "npm login --registry https://registry.npmjs.org",
    "publish:package": "pnpm run publish:check && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "publish:package:token": "pnpm run publish:setup && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "publish:package:otp": "pnpm run publish:check && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org --otp",
    "publish:dry-run": "pnpm publish --access public --no-git-checks --dry-run --registry https://registry.npmjs.org",
    "publish:dry-run:token": "pnpm run publish:setup && pnpm publish --access public --no-git-checks --dry-run --registry https://registry.npmjs.org",
    "release": "pnpm version && pnpm install --lockfile-only"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kitium-ai/detector.git"
  },
  "bugs": {
    "url": "https://github.com/kitium-ai/detector/issues"
  },
  "homepage": "https://github.com/kitium-ai/detector#readme",
  "author": "KitiumAI",
  "license": "MIT",
  "sideEffects": false,
  "dependencies": {
    "@kitiumai/logger": "^2.0.1",
    "@kitiumai/types": "^2.0.1",
    "@kitiumai/utils-ts": "^2.0.2",
    "@kitiumai/error": "^2.0.1"
  },
  "devDependencies": {
    "@kitiumai/config": "^2.0.1",
    "@kitiumai/lint": "^2.0.1",
    "@kitiumai/scripts": "^1.0.0",
    "@kitiumai/vitest-helpers": "^2.0.1",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.15.0",
    "happy-dom": "^15.11.7",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "tsup": "^8.2.4",
    "typescript": "^5.6.0",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
